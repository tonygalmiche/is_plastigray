<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>


        <template id="report_appel_de_livraison_style">
            .header {
                font-size:10pt;
            }
            .footer {
                font-size:7pt;
            }
            .page {
                font-size:9pt;
            }
            .titre {
                font-size:11pt;
                font-weight: bold;
            }
            .expediteur {
                font-size:9pt;
                text-align:center;
            }
            .destinataire {
                text-align:left;
                border: 1px solid black;
                padding:5mm;
            }

        </template>


        <template id="report_appel_de_livraison_layout" inherit_id="web.layout" primary="True">
            <!-- Add report attributes -->
            <xpath expr="//html" position="attributes">
                <attribute name="t-att-data-report-margin-top">data_report_margin_top if data_report_margin_top else None</attribute>
                <attribute name="t-att-data-report-header-spacing">data_report_header_spacing if data_report_header_spacing else None</attribute>
                <attribute name="t-att-data-report-dpi">data_report_dpi if data_report_dpi else None</attribute>
            </xpath>
            <!-- Add report style -->
            <xpath expr="//head" position="inside">
                <link href="/web/static/lib/bootstrap/css/bootstrap.css" rel="stylesheet"/>
                <link href="/website/static/src/css/website.css" rel="stylesheet"/>
                <link href="/web/static/lib/fontawesome/css/font-awesome.css" rel="stylesheet"/>
                <style type="text/css">
                    <t t-call="report.style"/>
                    <t t-call="is_plastigray.report_appel_de_livraison_style"/>
                </style>
            </xpath>
            <!-- Remove conflicting style -->
            <xpath expr="//head/link[@href='/web/static/src/css/full.css']" position="replace"></xpath>
        </template>



        <template id="report_appel_de_livraison_html_container">
            <t t-set="body_classname" t-value="'container'"/>
            <t t-call="is_plastigray.report_appel_de_livraison_layout">
                <t t-raw="0"/>
            </t>
        </template>


        <!-- Entête personnalisé Plastigray -->
        <template id="report_appel_de_livraison_external_layout_header">
            <div class="header">

                <div class="row">
                    <div class="col-xs-4  text-center">
                        <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % company.logo" style="max-height: 60px;"/>
                        <div class="expediteur">
                            S.A.S. au capital de 2 102 400 € <br />
                            Siège social : ZAC de Gray Sud <br />
                            CS 10133 - <b>70104 GRAY Cedex</b><br />
                            Tél. : 03 84 64 77 00 - Fax : 03 84 65 51 09 <br />
                            Siret B 377 846 381 00020 - Code NAF 2229 A <br />
                            Registre du Commerce GRAY <br />
                            N°Identification T.V.A. FR 65 377 846 381 <br />
                        </div>
                    </div>
                    <div class="col-xs-1" />
                    <div class="col-xs-7">
                        <div class="titre">
                            <span>Appel de livraison sur contrat N°</span>
                            <span t-field="o.name"/>
                             du <t t-usertime="%d/%m/%Y"/> à <t t-usertime="%H"/>H<br />
                        </div>
                        <div class="destinataire">
                            <b><span t-field="o.partner_id.name"/></b> (<span t-field="o.partner_id.is_code"/>)
                            <div t-field="o.partner_id"
                                 t-field-options='{"widget": "contact", "fields": ["address", "phone", "fax"], "no_marker": true}'/>
                        </div>
                    </div>
                </div>
            </div>
        </template>



        <!-- Pied de page personnalisé Plastigray -->
        <template id="report_appel_de_livraison_external_layout_footer">
            <div class="footer">
                <div class="text-center" style="border-top: 1px solid black">
                    <table>
                        <tr>
                            <td class="text-left" style="width:90%">
                                <b>Clause de réserve de propriété : </b>De convention expresse, nous nous réservons la plein propriété des marchandises fournies jusqu'au dernier jour de leur parfait paiement.<br />
                                <b>Reserve of title : </b>On express convention, we reserve ourselves the freehold of the provides goods until the last day of their total payment.<br />
                                <b>T.V.A. acquitée sur les débits</b><br />
                                <b>V.A.T. on debits</b><br />
                            </td>
                            <td class="text-right">
                                Page <span class="page" style="font-size:7pt;"/> / <span class="topage"/>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
            <br />
        </template>

        <!-- Squelette de la page personnalisé pour Plastigray -->
        <template id="report_appel_de_livraison_external_layout">
            <t t-if="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id"/>
            </t>
            <t t-if="not o or not 'company_id' in o">
                <t t-set="company" t-value="res_company"/>
            </t>
            <t t-call="is_plastigray.report_appel_de_livraison_external_layout_header"/>
            <t t-raw="0"/>
            <t t-call="is_plastigray.report_appel_de_livraison_external_layout_footer"/>
        </template>





<template id="report_appel_de_livraison_external_layout">
    <t t-if="o and 'company_id' in o">
        <t t-set="company" t-value="o.company_id"></t>
    </t>
    <t t-if="not o or not 'company_id' in o">
        <t t-set="company" t-value="res_company"></t>
    </t>
    <t t-call="is_plastigray.report_appel_de_livraison_external_layout_header" />
    <t t-raw="0" />
    <t t-call="is_plastigray.report_appel_de_livraison_external_layout_footer" />
</template>


<template id="report_appel_de_livraison_document">
    <t t-call="is_plastigray.report_appel_de_livraison_external_layout">
        <div class="page">

            <div t-foreach="o.product_ids" t-as="p" style="page-break-after:always;">
                <div>Article : <b><span t-field="p.product_id"/></b></div>
                <div t-if="p.date_bl">Dernier BL : <span t-field="p.num_bl"/> du <span t-field="p.date_bl"/> (Qt=<span t-field="p.qt_bl"/> <span t-field="p.uom_po_id"/>)</div>
                <div t-if="p.date_bl==False">Dernier BL : Aucun</div>
                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th class="text-center">Date</th>
                            <th class="text-center">Type</th>
                            <th class="text-right">Quantité</th>
                            <th class="text-right">Unité</th>
                            <th class="text-center">N°Commande</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="p.line_ids" t-as="l">
                            <td class="text-center"><span t-field="l.date"/></td>
                            <td class="text-center"><span t-field="l.type_cde"/></td>
                            <td class="text-right"><span t-field="l.quantite"/></td>
                            <td class="text-right"><span t-field="p.uom_po_id"/></td>
                            <td class="text-center"><span t-field="l.purchase_order_id.name"/></td>
                        </tr>
                    </tbody>
                </table>
            </div>

        </div>
    </t>
</template>


<template id="report_appel_de_livraison">
    <t t-call="is_plastigray.report_appel_de_livraison_html_container">
        <t t-foreach="doc_ids" t-as="doc_id">
            <t t-raw="translate_doc(doc_id, doc_model, 'partner_id.lang', 'is_plastigray.report_appel_de_livraison_document')"/>
        </t>
    </t>
</template>
</data>
</openerp>
