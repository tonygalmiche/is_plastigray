<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    	<record id="users_in_purchase_inherit_form" model="ir.ui.view">
            <field name="name">res.user.form</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_simple_form"/>
            <field name="arch" type="xml">
                <field name="phone" position="before">
                    <field name="is_acheteur_id"/>
                </field>
            </field>
        </record>
        
        <record id="purchase_order_state_inherit_form" model="ir.ui.view">
            <field name="name">purchase.order.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form" />
            <field name="arch" type="xml">
                <xpath expr="//header/button[@name='purchase_confirm']" position="before">
                    <button name="do_demande_achat" states="draft" type="object" string="Faire une demande d'achat" id="draft_demande_achat"/>
                    <button name="do_demande_achat" states="demande_achat" type="object" string="Confirmation de cette demande d'achat" id="draft_demande_confirm" context="{'confirm_demande_achat':True}"/>
                	<button name="action_cancel_draft" type="object" states="demande_achat" string="Set to Draft"/>
                
                </xpath>
            </field>
        </record>
        
        <record id="purchase_demande_achat" model="ir.actions.act_window">
            <field name="name">Quotation</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">purchase.order</field>
            <field name="context">{}</field>
            <field name="domain">[('state','in',('demande_achat',))]</field>
            <field name="view_mode">tree,form,graph,calendar</field>
            <field name="search_view_id" ref="purchase.view_purchase_order_filter"/>
        </record>
    
    	<menuitem id="menu_is_achats_cde_11" sequence="11" name="Demandes d'achats" parent="menu_is_achats_cde" action="purchase_demande_achat" />
    </data>
</openerp>