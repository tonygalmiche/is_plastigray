<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>


        <record id="is_invoice_form" model="ir.ui.view">
            <field name="name">is_invoice_form</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form" />
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="attributes">
                    <attribute name="class">oe_form_sheet_width_wider</attribute>
                </xpath>

                <xpath expr="/form/sheet/notebook/page[@string='Invoice Lines']/field[@name='invoice_line']/tree/field[@name='account_id']" position="after">
                    <field name="is_section_analytique_id"/>
                </xpath>

                <!--
                <xpath expr="//sheet" position="after">
                    <attribute name="class">oe_form_sheet_width_wider</attribute>
                </xpath>
                -->

                <xpath expr="//field[@name='fiscal_position']" position="after">
                    <field name="is_document"/>
                    <field name="is_num_cde_client"/>
                    <field name="is_num_bl_manuel"/>
                </xpath>

            </field>
        </record>





        <!-- Export des factures dans Série-M -->
        <record id="export_ventes_seriem_action_server" model="ir.actions.server">
             <field name="name">Exportation des ventes dans Série-M</field>
            <field name="model_id" ref="model_account_invoice"/>
            <field name="code">action = self.export_ventes_seriem(cr, uid, context.get('active_ids', []), context=context)</field>
        </record>
        <record id="export_ventes_seriem_ir_value" model="ir.values">
            <field eval="'client_action_multi'" name="key2"/>
            <field eval="'account.invoice'" name="model"/>
            <field name="name">Exportation des ventes dans Série-M</field>
            <field eval="'ir.actions.server,%d'%export_ventes_seriem_action_server" name="value"/>
        </record>




    </data>
</openerp>
