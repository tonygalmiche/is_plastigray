<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_is_import_contract" model="ir.ui.view">
            <field name="name">is.import.cde.cli.form</field>
            <field name="model">is.import.cde.cli</field>
            <field name="arch" type="xml">
                <form string="Importation des commandes ouvertes" version="7.0">
                    <group>
                        <field name="partner_id" on_change="onchange_partner_id(partner_id, context)" domain="[('is_import_function','!=','')]" />
                        <field name="import_function"/>
                        <field name="file" />
                    </group>
                    <footer>
                        <button string='Importer' name="import_contract_orders" type="object" class="oe_highlight"/>
                        or
                        <button string="Annuler" class="oe_link" special="cancel"/>
                    </footer>
               </form>
            </field>
        </record>

        <record id="is_import_cde_cli_action" model="ir.actions.act_window">
            <field name="name">Importer les commandes ouvertes</field>
            <field name="res_model">is.import.cde.cli</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
           <field name="view_id" ref="view_is_import_contract"/>
           <field name="target">new</field>
        </record>

        
        <record id="is_import_cde_cli_notfound_view" model="ir.ui.view">
             <field name="name">is_import_cde_cli_notfound_view</field>
             <field name="model">is.import.cde.cli</field>
             <field name="arch" type="xml">
                <form string="Importation des commandes ouvertes" version="7.0">
                    <field name="partner_id" />
                    <separator string="Contrats non trouvÃ©s"/>
                    <label string="Les contrats suivants n'existent pas sur votre systeme, Essayer de les creer pour achever l'import."/>
                         <field name="line_ids" nolabel="1" readonly="1">
                            <tree>
                                <field name="import_id" />
                                <field name="is_ref_client" />
                                <field name="client_order_ref" />
                            </tree>
                        </field>
                    <footer>
                        <button string="Close" class="oe_highlight" special="cancel"/>
                    </footer>
                </form>
             </field>
         </record>
        
    </data>
</openerp>
