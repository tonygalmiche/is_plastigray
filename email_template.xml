<?xml version="1.0" encoding='UTF-8'?>
<openerp>
    <data>

        <record id="demande_chart_demandeur_id_email_template" model="email.template">
            <field name="name">Demande Chart of Demandeur</field>
            <field name="email_from">${(object.demandeur_id.email or '')|safe}</field>
            <field name="subject">Demande Chart of Demandeur</field>
            <field name="email_to">${object.demandeur_id.email|safe}</field>
            <field name="lang">${object.lang}</field>
            <field name="model_id" ref="is_plastigray.model_is_demande_achat"/>
            <field name="auto_delete" eval="True"/>
            <field name="body_html"><![CDATA[
Hello ${object.demandeur_id.name},
<table cellspacing="1" border="0" cellpadding="4">
    <tr>
        <td>Fournisseur : ${object.fournisseur_id.name or ''}</td>
        <td>Delai Liv souhaite : ${object.delai_souhaite or ''}</td>
    </tr>
    <tr>
        <td>Type : ${object.type_da or ''}</td>
        <td>Piece Jointe : ${object.piece_jointe or ''}</td>
    </tr>
</table>
<div><b>To view data <a href='${object.record_url}'>click here</a></b></div>
<p>
    Thanks,
</p>
            ]]></field>
        </record>
        
